<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Muestra si el bluetooth esta disponible-->
    <TextView
        android:id="@+id/statusBluetoothTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000"/>

    <!--Icono de bluetooth (on/off)-->
    <ImageView
        android:id="@+id/bluetoothIv"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <!--Boton on-->
    <Button
        android:id="@+id/onBtn"
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encender"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

    <!--Boton off-->
    <Button
        android:id="@+id/offBtn"
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apagar"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

    <!--Boton de discoverable-->
    <Button
        android:id="@+id/discoverableBtn"
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discoverable"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>

    <!--Boton de obtener dispositivos vinculados-->
    <Button
        android:id="@+id/bindedDevicesBtn"
        android:minWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispositivos conectados"
        style="@style/Base.Widget.AppCompat.Button.Colored"/>
    
    <!--TextView para ver dispositivos vinculados-->
    <TextView
        android:id="@+id/mPairedTv"
        android:minWidth="250dp"
        android:text=""
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>